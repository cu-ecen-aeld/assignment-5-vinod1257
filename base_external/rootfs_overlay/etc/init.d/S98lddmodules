#!/bin/sh

case "$1" in
    start)
        echo "Loading LDD modules..."
        # Load scull module
        /usr/bin/scull_load
        # Load misc-modules (including faulty and hello)
        /usr/bin/module_load
        # The above script might already load hello, but modprobe is also fine
        # and demonstrates dependency handling.
        modprobe hello
        ;;
    stop)
        echo "Unloading LDD modules..."
        rmmod hello
        /usr/bin/module_unload
        /usr/bin/scull_unload
        ;;
    *)
        echo "Usage: $0 {start|stop}"
    exit 1
esac

exit 0